{{> messages}}
{{#if erros}}
    {{#each erros}}
        <div class="warning_msg">
            {{err_msg}}
            <a href="#" class="msg_close">x</a>
        </div>
    {{/each}}
{{/if}}
<form action="/admin/localidades/editarLocalidade/{{localidade.localidade_id}}?_method=PUT" method="post">
    <label for="localidade">Localidade</label>
    <input type="text" name="localidade" pattern="^[^0-9]+$" value="{{localidade.localidade}}" required><br>
    <input type="submit" value="Actualizar">
</form>