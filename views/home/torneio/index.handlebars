
{{#if data}}
    {{#if data.torneio}}
        <div class="title__bar">
            <h1>{{data.torneio.designacao}} - {{data.torneio.localidade}}</h1>
            <h3>{{data.torneio.ano}}</h3>
        </div>
    {{/if}}

    {{#if error}}
        <div class="error_msg">
            {{{error.error_msg}}}
            <a href="/equipas" class="btn primary_btn">Adicionar Equipas</a>
        </div>
    {{else}}

        {{> messages}}
        <div class="escaloesSelect__wrapper">
            {{#if data.escaloesMasculino}}
            <div class="escalao__wrapper">
                <div class="escalao__title">
                    Masculino
                </div>
                <div class="escalaoSelect">
                    {{#each data.escaloesMasculino}}
                    <div class="escalaoSelect__item">
                        <div class="escalaoSelect__item-title">{{designacao}}</div>
                        <div class="escalaoSelect__fase">
                            <div class="escalaoSelect__fase-info">
                                <p>Fase</p>
                                <p>{{fase}}</p>
                            </div>
                        </div>
                        <a href="/torneio/resultados/escalao/{{escalao_id}}/fase/{{fase}}" class="escalaoSelect__btn"><img src="/imagens/double-arrow.svg" class="arrow"></a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
            {{#if data.escaloesFeminino}}
            <div class="escalao__wrapper">
                <div class="escalao__title">
                    Feminino
                </div>
                <div class="escalaoSelect">
                    {{#each data.escaloesFeminino}}
                    <div class="escalaoSelect__item">
                        <div class="escalaoSelect__item-title">{{designacao}}</div>
                        <div class="escalaoSelect__fase">
                            <div class="escalaoSelect__fase-info">
                                <p>Fase</p>
                                <p>{{fase}}</p>
                            </div>
                        </div>
                        <a href="/torneio/resultados/escalao/{{escalao_id}}/fase/{{fase}}" class="escalaoSelect__btn"><img src="/imagens/double-arrow.svg" class="arrow"></a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </div> 
    {{/if}}


{{/if}}