                                <td width="7%" align="center"></td>
                            </tr>
                            <tr>
                                <td rowspan="2" width="4%" align="center">{{equipa1_id}}</td>
                                <td>{{equipa1_primeiro_elemento}}</td>
                                <td rowspan="2" width="15%">{{equipa1_localidade}}</td>
                                <td rowspan="2" align="center"><input type="text" name="equipa1_parciais[]" size="10"></td>
